#!/bin/bash
#
option="o"
#
cmda="tail -f $HOME/direwolf.output"
cmdb="ls -al $HOME/direwolf.conf"
cmdc="bin/configdirew"
cmdd="sudo service direwolf stop"
cmde="sudo service direwolf start"
cmdf="sudo service direwolf restart"
cmdg="cp -r $HOME/dconf/sample/direwolf.conf.tnc $HOME/dconf/direwolf.conf.tnc"
cmdh="ln -s dconf/direwolf.conf.tnc direwolf.conf"
cmdi="direwolf -t 0 -c dconf/direwolf.conf.igate"

while [ $option != "q" ] ; do
 echo ""
 echo "a) $cmda"
 echo "b) stop soundmodem/ax25 (no aprx)"
 echo "c) start alsamixer"
 echo "d) tail syslog"
 echo "e) axlisten (for signal or test track)"
 echo "f) mheard"
 echo "g) tail aprx.log"
 echo "h) tail aprx-rf.log"
 echo "i) Commit soundmodem/ax25/aprx to startup "
 echo "j) tail paramecho.txt"
 echo "X) Clear All values and start again"
 echo "q) quit this menu"
 echo ""
 echo -e "Enter option :\c"
 read ans
 if [ -z $ans ] ; then
  ans="$option"
 fi
 option="$ans"
 case $option in
  a) `$cmda` ;;
  b) sudo /etc/ax25/ax25-down.sh ;;
  c) sudo alsamixer ;;
  d) sudo tail /var/log/syslog|pg ;;
  e) sudo axlisten -aht ;;
  f) mheard ;;
  g) tail /var/log/aprx/aprx.log ;;
  h) tail /var/log/aprx/aprx-rf.log ;;
  i) sudo /home/pi/aprx/autostartaprx ;;
  j) tail /home/pi/aprx/paramecho.txt
  X) sudo /home/pi/aprx/clearaprx ;;
  q) echo "good bye"
 esac
done

